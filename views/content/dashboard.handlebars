<div class="lower-container">

    <div id="content-area">
        <!-- Calendar -->
        <div id="calendar-container">
            <div id="calendar"></div>
        </div>
        <div id="calendar-buttons">
            {{!-- <div id="add-event-button">
                <img src="/img/plus.svg"/>
            </div>
            <div id="today-button">
                <img src="/img/calendar.svg"/>
            </div> --}}
        </div>
    </div>
    <div id="edit-area">
        <div class="edit-buttons invisible">
            <div>
                <button id="create-entry-button">Create Entry</button>
            </div>
        </div>
        <div id="entries">
            <!-- Entries will be added here -->
        </div>
    </div>
</div>
<dialog id="edit-modal">
    <div id="modal-wrapper">
        <div id="edit-modal-title">Entry for <span id="edit-date">DATE</span></div>
        <form id="edit-form">
            {{!-- <label for="edit-title">Title:</label> --}}
            <input type="text" id="edit-title" name="title" placeholder="Title">
            {{!-- <label for="edit-content">Content:</label> --}}
            <textarea id="edit-content" name="content" placeholder="Content"></textarea>
            {{!-- <label for="edit-tags">Tags:</label> --}}
            {{!-- <input type="text" id="edit-tags" name="tags"> --}}
            {{!-- <label for="edit-reminder">Reminder:</label>
            <input type="checkbox" id="edit-reminder" name="reminder"> --}}
            <div>
                <input type="submit" value="Save">
                <input type="button" value="Cancel" id="edit-cancel">
            </div>
        </form>
    </div>
</dialog>
<!-- Template entry -->
<div id="entry-template" class="entry hidden">
    <div class="entry-title">Test Entry</div>
    <div class="entry-content">
        <p>This is a test entry</p>
        <p>This contains rich text</p>
    </div>
    <div class="entry-buttons">
        <div class="edit-button">
            <img src="/img/pencil.svg"/>
        </div>
        <div class="reminder-button" data-reminderid="0">
            <img src="/img/bell.svg"/>
        </div>
        <div class="delete-button">
            <img src="/img/bin2.svg"/>
        </div>
    </div>
</div>
