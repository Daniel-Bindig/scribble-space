<main>
    <div class="upper-container" id='container1'>
        <nav class="navbar">
            <ul class="menu">
                <li><a href="#" id="home-tab">Home</a></li>
                <li><a href="#" id="calendar-tab">Calendar</a></li>
                <li><a href="#" id="notes-tab">Notes</a></li>
                <li><a href="#" id="notifications-tab">Notifications</a></li>
            </ul>
        </nav>
        <div id="selected-option">H O M E</div>
    </div>
    <div class="lower-container">

        <div id="content-area">

            <!-- Event Form -->
            <div id="event-form-container">
                <form id="eventForm">
                    <label for="eventName">Event Name:</label>
                    <input type="text" id="eventName" name="eventName">
                    <label for="eventDate">Event Date:</label>
                    <input type="date" id="eventDate" name="eventDate">
                    <input type="submit" value="Add Event">
                </form>
            </div>
            <!-- Calendar -->
            <div id="calendar-container">
                <div id="calendar"></div>
            </div>
        </div>
        <div id="edit-area">
        </div>
    </div>
    <script src="./dashboard.js"></script>
</main>
<script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.8/index.global.min.js'></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        var calendarEl = document.getElementById('calendar');
        var calendar = new FullCalendar.Calendar(calendarEl, {
        initialView: 'dayGridMonth'
        });
        calendar.render();
    });
</script>